      <main class="main-view-container">
        <div class="main-view">
          
          <h2 class="sub-header">
                           　会員情報入力
          </h2>
          <form id="registration-form" action="" method="POST" class="inner-register-form"　novalidate="novalidate">
          　<!-- アクションはパス先が完成していないので未定義で置いている -->
            

            <!-- ニックネームフォーム作成 -->
            <div class="form-create">            
              <div class="form-index">
                <label for="mickname">ニックネーム</label>
                <span class="need-select">必須</span>
                <input type="text" value name="nickname"
                placeholder="例）メルカリ太郎" class="input-default">
              </div>

              <!-- メールアドレスフォーム作成 -->
              <div class="form-index">
                <label for="email">メールアドレス</label>
                <span class="need-select">必須</span>
                <input type="email" value name="email"
                placeholder="PC・携帯どちらでも可" class="input-default">
              </div>

              <!-- パスワードフォームは構造がややこしいので別クラスで定義する -->
              <div class="form-index-password">             
                <label for="password">パスワード</label>
                <span class="need-select">必須</span>
                <input type="password" name="password"
                placeholder="７文字以上の半角英数字" class="input-default">
                <p class="infomation-form">※ 英字と数字の両方を含めて設定してください</p>
                <div class="checkbox-info">
                  <input type="checkbox" id="reveal-password">
                  <i class="icon-check">
                    <!-- 見本環境での::beforeがよく分からず放置 本来ここに記述されている-->
                    </i>
                    <label class="reveal-password">パスワードを表示する</label>
                </div> 
              </div>
              
              <!-- 特に入力欄が無いので、こちらも別クラスで定義する -->
              <div class="velification">
                <h3 class="identification">本人確認</h3>
                <p class="instructions">安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。</p>              
              </div>
              <!-- 名前（漢字）入力フォーム -->
              <div class="form-index">
                <label class="oname">お名前（全角)</label>
                <span class="need-select-name">必須</span>
                <input type="text" name="first-name"
                placeholder="例）山田" class="input-default half-one">
                <input type="text" name="family-name"
                placeholder="例）彩" class="input-default half">
              </div>
              
              <!-- 名前（カタカナ）入力フォーム -->
              <div class="form-index">
                <label class="oname">お名前カナ(全角)</label>
                <span class="need-select-name">必須</span>
                <input type="text" name="first-name"
                placeholder="例）ヤマダ" class="input-default half-one">
                <input type="text" name="family-name"
                placeholder="例）アヤ" class="input-default half">
              </div>
              
              <!-- 生年月日入力フォーム -->
              <div class="form-index">
                <label for="birthday">生年月日</label>
                <span class="need-select">必須</span>
                <div class="birthday-input-form">
                  <div class="select-wrap">
                      <i class="icon-arrow-bottom">
                        <!-- ::beforeがよく分からず放置 -->
                      </i>
                      <!-- select-defaultでクラスを統一しています -->
                      <select name="year" class="select-default" aria-invalid="false">
