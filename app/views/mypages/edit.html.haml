.mypage-container
  = render 'mypage-header'
  - breadcrumb :mypage_index
  = render 'mypages/bread-crumbs'
  %main.container
    = render 'shared/side_bar'
    .l-content
      %section.l-chapter-container
        %h2.l-chapter-container__head
          プロフィール
        = form_with model: @user, local:true, method: 'POST', class: 'head-form' do |f|
          .setting-profile-icon
            %figure
              = image_tag('tatara.png', class: 'image-image', height: '60px', width: '60px')
            = f.text_field :nickname, { class: 'input-default' ,value: "current_user.nickname", placeholder: '例)TATARA' }
          .setting-profile-content
            = f.text_area :content, { class: 'textarea-default', placeholder: '例)ぼくドラえもん' }
            = f.submit '変更する', class: 'btn-default btn-red'
   
  = render 'shared/banner'
  = render 'shared/footer'
 

